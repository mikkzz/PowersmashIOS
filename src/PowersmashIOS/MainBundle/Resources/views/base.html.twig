{#
  This is the base template format for the pages
  that will be displayed which comes from the Bundles
  of the Powersmash Web Application
#}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>
      {% block title %}Powersmash{% endblock %}
    </title>
    {% block stylesheets %}
      {% stylesheets filter="scssphp" output"css/app.css"
        "%kernel.root_dir%/Resources/assets/scss/bootstrap.scss"
        "%kernel.root_dir%/Resources/assets/scss/font-awesome.scss"
        "%kernel.root_dir%/Resources/assets/css/*.css" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
      {% endstylesheets %}
      <link rel="stylesheet" href="{{ asset('css/app.css') }}" />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
  <body>
    <header>
      <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" path="{% path('homepage') %}">
              Powersmash
            </a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
            </button>
        </div>
      </div>
    </header>
    {% block body %}
    {% endblock %}
  </body>
</html>
